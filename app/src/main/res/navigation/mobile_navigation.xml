<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.task.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_categories"
        android:name="com.example.task.ui.category.CategoryFragment"
        android:label="@string/title_category"
        tools:layout="@layout/fragment_category" />

    <fragment
        android:id="@+id/navigation_Deals"
        android:name="com.example.task.ui.deals.DealsFragment"
        android:label="@string/title_deal"
        tools:layout="@layout/fragment_deals" />
    <fragment
        android:id="@+id/navigation_Cart"
        android:name="com.example.task.ui.cart.Cartfragment"
        android:label="@string/title_cart"
        tools:layout="@layout/fragment_cart" />
    <fragment
        android:id="@+id/navigation_More"
        android:name="com.example.task.ui.more.Morefragment"
        android:label="@string/title_more"
        tools:layout="@layout/fragment_more" />
</navigation>